<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/unchecked"
        android:drawable="@drawable/ic_gome_ctrl_center_sound_normal"
        android:state_checked="false" />

    <item
        android:id="@+id/checked"
        android:drawable="@drawable/ic_gome_ctrl_center_sound_vibration"
        android:state_checked="true" />

    <transition
        android:drawable="@drawable/animated_sound_normal2vibration"
        android:fromId="@+id/unchecked"
        android:toId="@+id/checked" />

    <transition
        android:drawable="@drawable/animated_sound_vibration2normal"
        android:fromId="@+id/checked"
        android:toId="@+id/unchecked" />
</animated-selector>